<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(var(--gray-light), 0.5);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .logo {
    position: relative;
  }

  .logo-blur {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 50px;
    height: 50px;
    background: var(--accent);
    filter: blur(50px);
    opacity: 0.5;
    z-index: -1;
  }

  h2 {
    margin: 0;
    font-size: 1.5em;
    transition: text-shadow 0.2s ease;
    font-family: var(--font-heading);
    font-weight: 700;
  }

  h2:hover {
    text-shadow: 0 0 20px rgba(52, 152, 219, 0.5);
  }

  h2 a {
    text-decoration: none;
    color: rgb(var(--black));
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1em 0;
  }

  nav a {
    padding: 0.5em 0.8em;
    color: rgb(var(--gray-dark));
    border-radius: 8px;
    text-decoration: none;
    font-size: 0.9em;
    transition: all 0.2s ease;
    font-family: var(--font-heading);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  nav a:hover {
    background: rgba(var(--gray-light), 0.5);
  }

  nav a.active {
    background: var(--ai-gradient);
    color: white;
  }

  .social-links,
  .social-links a {
    display: flex;
  }

  .social-links a {
    color: rgb(var(--gray));
    transition: color 0.2s ease;
  }

  .social-links a:hover {
    color: var(--accent);
  }

  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }

  .hamburger {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 101;
  }

  .hamburger span {
    display: block;
    width: 25px;
    height: 3px;
    margin: 5px 0;
    background: rgb(var(--black));
    transition: all 0.3s ease-in-out;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
    transition: all 0.3s ease-in-out;
  }

  @media (max-width: 720px) {
    header {
      position: relative;
    }

    .hamburger {
      display: block;
    }

    .nav-links {
      display: flex;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(10px);
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      padding: 1rem;
      z-index: 100;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      border-radius: 0 0 12px 12px;
      
      opacity: 0;
      transform: translateY(-20px);
      pointer-events: none;
      visibility: hidden;
      transition: all 0.3s ease-in-out;
    }

    .nav-links.show {
      opacity: 1;
      transform: translateY(0);
      pointer-events: auto;
      visibility: visible;
    }

    .internal-links {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      width: 100%;
    }

    .internal-links a {
      width: 100%;
      text-align: center;
      padding: 0.75rem;
      opacity: 0;
      transform: translateY(-10px);
      transition: all 0.3s ease-in-out;
      transition-delay: calc(var(--index) * 0.1s);
    }

    .nav-links.show .internal-links a {
      opacity: 1;
      transform: translateY(0);
    }

    .social-links {
      display: flex;
      gap: 1rem;
      padding-top: 0.5rem;
      border-top: 1px solid rgba(var(--gray-light), 0.5);
      width: 100%;
      justify-content: center;
    }

    .social-links a {
      opacity: 0;
      transform: translateY(-10px);
      transition: all 0.3s ease-in-out;
      transition-delay: calc((var(--index) + 3) * 0.1s);
    }

    .nav-links.show .social-links a {
      opacity: 1;
      transform: translateY(0);
    }

    /* Hamburger animation classes */
    .hamburger.active span:nth-child(1) {
      transform: rotate(45deg) translate(6px, 6px);
    }

    .hamburger.active span:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active span:nth-child(3) {
      transform: rotate(-45deg) translate(6px, -6px);
    }
  }
</style>

<script>
  function addAnimationDelays() {
    const internalLinks = document.querySelectorAll('.internal-links a');
    const socialLinks = document.querySelectorAll('.social-links a');
    internalLinks.forEach((link, index) => {
      if (link instanceof HTMLElement) {
        link.style.setProperty('--index', index.toString());
      }
    });

    socialLinks.forEach((link, index) => {
      if (link instanceof HTMLElement) {
        link.style.setProperty('--index', index.toString());
      }
    });
  }

  document.addEventListener('astro:page-load', addAnimationDelays);
  addAnimationDelays();
</script>

<script src="../scripts/nav.js"></script>